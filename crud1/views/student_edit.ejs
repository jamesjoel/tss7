<%- include('header') %>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form action="/student/edit/<%= result._id %>" method="post">
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" value="<%= result.full_name %>" class="form-control" name="full_name"/>
                </div>
                <div class="form-group">
                    <label>Age</label>
                    <input type="text" value="<%= result.age %>" class="form-control" name="age"/>
                </div>
                <div class="form-group">
                    <label>Fee</label>
                    <input type="text" value="<%= result.fee %>" class="form-control" name="fee"/>
                </div>
                <Br />
                <div class="form-group">
                    
                    <input type="submit" class="btn btn-primary" value="Update"/>
                </div>
            </form>
        </div>

    </div>
</div>
</body>

</html>