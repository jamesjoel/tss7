<%- include('header') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">List All Categorys</h1>
                        
                    </div>

                    
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-dark table-hover table-bordered">
                                <tr>
                                    <th>S.No.</th>
                                    <th>Category</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                    
                                </tr>
                                <% result.forEach(function(x, n){ %>
                                    <tr>
                                        <td><%= n+1 %></td>
                                        <td><%= x.title %></td>
                                        <td><a href="/admin/category/edit/<%= x._id %>" class="btn btn-sm btn-info">Edit</a></td>
                                        <td><a href="/admin/category/delete/<%= x._id %>" class="btn btn-sm btn-danger">Delete</a></td>
                                    </tr>
                                <% }) %>
                            </table>
                        </div>
                    </div>
                </div>
                

            </div>
            
<%- include('footer') %>

