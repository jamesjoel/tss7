<%- include('header') %>
    <main>
        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Registration</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End-->
        <!--================login_part Area =================-->
        <section class="login_part section_padding ">
            <div class="container">
                <div class="row align-items-center">
                    
                    <div class="col-lg-8 col-md-8 offset-md-2 offset-lg-2">
                        <div class="login_part_form">
                            <div class="login_part_form_iner">
                                <h3>Welcome Back ! <br>
                                    Please Sign up now</h3>
                                <form class="row contact_form" action="/signup/save" method="post" novalidate="novalidate">
                                    <div class="col-md-12 form-group p_star">
                                        <input type="text" class="form-control" id="name" name="full_name" value="" placeholder="Full Name">
                                    </div>
                                    <div class="col-md-12 form-group p_star">
                                        <input type="text" class="form-control" id="name" name="username" value="" placeholder="Username">
                                    </div>
                                    <div class="col-md-12 form-group p_star">
                                        <input type="password" class="form-control" id="password" name="password" value="" placeholder="Password">
                                    </div>
                                    <div class="col-md-12 form-group p_star">
                                        <input type="password" class="form-control" id="password" value="" placeholder="Re-Password">
                                    </div>
                                    <div class="col-md-12 form-group p_star">
                                        <textarea class="form-control" placeholder="Address" name="address"></textarea>
                                    </div>
                                    <div class="col-md-12 form-group p_star">
                                        <input type="text" class="form-control" id="name" name="contact" value="" placeholder="Contact Number">
                                    </div>
                                    <div class="col-md-12 form-group p_star">
                                        <select name="city" class="form-control">
                                            <option>Select City</option>
                                            <option>Indore</option>
                                            <option>Mumbai</option>
                                            <option>Pune</option>
                                            <option>Delhi</option>
                                        </select>
                                    </div>
                                    <div class="col-md-12 form-group p_star">
                                        Male <input type="radio" name="gender" value="male">
                                        Female <input type="radio" name="gender" value="female">
                                    </div>
                                    <div class="col-md-12 form-group">
                                        
                                        <button type="submit" value="submit" class="btn_3">
                                            Signup
                                        </button>
                                        
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================login_part end =================-->
    </main>
    <%- include('footer') %>